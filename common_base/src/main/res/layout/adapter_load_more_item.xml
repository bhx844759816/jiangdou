<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ProgressBar
            android:id="@+id/id_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/id_guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.AppCompat.ProgressBar"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/id_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
    />

    <TextView
            android:id="@+id/id_loadingMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="加载更多"
            app:layout_constraintBottom_toBottomOf="@id/id_progressBar"
            app:layout_constraintLeft_toRightOf="@id/id_guideline"
            app:layout_constraintTop_toTopOf="@id/id_progressBar"/>

    <TextView
            android:id="@+id/id_noLoadMoreData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="没有更多数据啦"
            android:visibility="gone"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
