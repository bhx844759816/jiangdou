<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/resumeDetailsBack"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_back" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="简历详情"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_title_size" />

        <View
            style="@style/DividerLineTheme"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivHeadPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_head_photo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ivUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:text="杨楠楠"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_default_size"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/ivHeadPhoto"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_girl"
                app:layout_constraintBottom_toBottomOf="@id/ivUserName"
                app:layout_constraintLeft_toRightOf="@id/ivUserName"
                app:layout_constraintTop_toTopOf="@id/ivUserName" />

            <TextView
                android:id="@+id/tvUserAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawableLeft="@drawable/icon_age"
                android:drawablePadding="8dp"
                android:text="20岁"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toLeftOf="@id/ivUserName"
                app:layout_constraintTop_toBottomOf="@id/ivUserName" />

            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="8dp"
                android:text="13728872237"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toLeftOf="@id/tvUserAge"
                app:layout_constraintTop_toBottomOf="@id/tvUserAge" />

            <TextView
                android:id="@+id/tvUserBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:drawableLeft="@drawable/icon_birthday"
                android:drawablePadding="8dp"
                android:text="1991-08-10"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toRightOf="@id/tvUserAge"
                app:layout_constraintTop_toTopOf="@id/tvUserAge" />

            <TextView
                android:id="@+id/tvUserStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawableLeft="@drawable/icon_satr"
                android:drawablePadding="8dp"
                android:text="天秤座"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toLeftOf="@id/tvUserBirthday"
                app:layout_constraintTop_toBottomOf="@id/tvUserBirthday" />

            <View
                android:id="@+id/divider1"
                style="@style/DividerLineTheme"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserPhone" />

            <TextView
                android:id="@+id/tvUserEdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="学历:  本科"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider1" />

            <TextView
                android:id="@+id/tvUserWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="体重:  55KG"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toLeftOf="@id/tvUserEdu"
                app:layout_constraintTop_toBottomOf="@id/tvUserEdu" />

            <TextView
                android:id="@+id/tvUserLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="位置:  郑州市 金水区"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toRightOf="@id/tvUserEdu"
                app:layout_constraintTop_toTopOf="@id/tvUserEdu" />

            <TextView
                android:id="@+id/tvUserHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="身高:  173"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toLeftOf="@id/tvUserLocation"
                app:layout_constraintTop_toBottomOf="@id/tvUserLocation" />

            <TextView
                android:id="@+id/tvUserDescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="我的优势"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_default_size"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/tvUserWeight"
                app:layout_constraintTop_toBottomOf="@id/tvUserWeight" />

            <TextView
                android:id="@+id/tvUserDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="AntV 是蚂蚁金服全新一代数据可视化解决方案，致力于提供一套简单方便、专业可靠、无限可能的数据可视化最佳实践。AntV 是蚂蚁金服全新一代数据可视化解决方案，致力于提供一套简单方便、专业可靠….."
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_small_size"
                app:layout_constraintLeft_toLeftOf="@id/tvUserDescriptionTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserDescriptionTitle" />

            <View
                android:id="@+id/divider2"
                style="@style/DividerLineTheme"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserDescription" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFE7BA"
            android:gravity="center"
            android:text="电话联系"
            android:textColor="@color/text_default"
            android:textSize="@dimen/text_default_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="录用邀请"
            android:textColor="@color/white"
            android:textSize="@dimen/text_default_size" />
    </LinearLayout>
</RelativeLayout>