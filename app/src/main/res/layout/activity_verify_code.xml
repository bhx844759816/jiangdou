<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarHeight"
            android:id="@+id/toolBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <FrameLayout
                android:id="@+id/flBack"
                android:layout_width="60dp"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_back"
                    android:layout_gravity="center_vertical"
            />
        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolBar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:text="@string/inputVerifyCode"
            android:textStyle="bold"
            android:textSize="@dimen/text_big_size"
            android:textColor="@color/text_default"
    />
    <LinearLayout
            android:id="@+id/llInputParent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp">
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <EditText
                    android:id="@+id/etInputNumOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/text_big_size"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/code_line"
                    android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
        >
            <EditText
                    android:id="@+id/etInputNumTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/text_big_size"
                    android:maxLength="1"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/code_line"
                    android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <EditText
                    android:id="@+id/etInputNumThree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/text_big_size"
                    android:maxLength="1"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/code_line"
                    android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">
            <EditText
                    android:id="@+id/etInputNumFour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="1"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/text_default"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/text_big_size"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/code_line"
                    android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
    </LinearLayout>


    <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/llInputParent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_btn_size"
            android:text="@string/nextSteps"
            android:gravity="center"
            android:enabled="false"
            android:background="@drawable/shape_button_default"
    />
</androidx.constraintlayout.widget.ConstraintLayout>