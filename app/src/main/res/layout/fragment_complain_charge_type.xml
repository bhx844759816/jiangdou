<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="填写详细资料有助于我们更快地解决你的投诉"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/text_small_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tvChargeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工资拖欠"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_default_size"
                    android:textColor="@color/text_title"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="@dimen/text_small_size"
                    android:layout_toRightOf="@id/tvChargeTitle"
                    android:layout_alignBottom="@id/tvChargeTitle"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:button="@null"
                    android:checked="true"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/select_round_circle_select"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:button="@null"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/select_round_circle_select"
                    />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>