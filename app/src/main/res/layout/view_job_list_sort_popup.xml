<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
             android:id="@+id/jobListPopupParent"
    android:background="@color/halfTransparent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rgSortParent"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <View style="@style/DividerLineTheme" />

        <RadioButton
            android:id="@+id/rbSortWhole"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@null"
            android:gravity="center"
            android:text="综合排序"
            android:textSize="@dimen/text_small_size"
            android:textColor="@color/select_job_list_sort_rule" />

        <View style="@style/DividerLineTheme" />
        <RadioButton
            android:id="@+id/rbSortMoney"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@null"
            android:gravity="center"
            android:text="时薪最高"
            android:textSize="@dimen/text_small_size"
            android:textColor="@color/select_job_list_sort_rule" />

        <View style="@style/DividerLineTheme" />

        <RadioButton
            android:id="@+id/rbSortJobPeoples"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@null"
            android:textSize="@dimen/text_small_size"
            android:gravity="center"
            android:text="招人最多"
            android:textColor="@color/select_job_list_sort_rule" />

    </RadioGroup>
</FrameLayout>