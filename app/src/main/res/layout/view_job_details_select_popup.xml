<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jobListPopupParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rgSortParent"
        android:layout_width="90dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_drop_down_bg"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/flShare"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableLeft="@drawable/icon_share"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/text_hint2"
                android:textSize="@dimen/text_small_size" />
        </FrameLayout>


        <View style="@style/DividerLineTheme" />

        <FrameLayout
            android:id="@+id/flRefuse"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableLeft="@drawable/icon_refuse"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="投诉"
                android:textColor="@color/text_hint2"
                android:textSize="@dimen/text_small_size" />
        </FrameLayout>

        <View style="@style/DividerLineTheme" />

        <FrameLayout
            android:id="@+id/flGoBackHome"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/rbSortWhole"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableLeft="@drawable/icon_goback_home"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="回首页"
                android:textColor="@color/text_hint2"
                android:textSize="@dimen/text_small_size" />
        </FrameLayout>

    </LinearLayout>
</FrameLayout>