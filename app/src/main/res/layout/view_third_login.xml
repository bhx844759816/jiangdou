<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <TextView
            android:id="@+id/tvThirdLoginTitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="100dp"
            android:text="@string/thirdLogin"
            android:textColor="@color/text_new_user_register"
            android:textSize="@dimen/text_default_size"
    />
    <View android:layout_width="80dp" android:layout_height="1dp"
          android:background="@color/divider_line"
          app:layout_constraintRight_toLeftOf="@id/tvThirdLoginTitle"
          app:layout_constraintTop_toTopOf="@id/tvThirdLoginTitle"
          android:layout_marginEnd="15dp"
          android:layout_marginRight="15dp"
          app:layout_goneMarginRight="15dp"
          app:layout_constraintBottom_toBottomOf="@id/tvThirdLoginTitle"
    />
    <View android:layout_width="80dp" android:layout_height="1dp"
          android:background="@color/divider_line"
          app:layout_constraintLeft_toRightOf="@id/tvThirdLoginTitle"
          app:layout_constraintTop_toTopOf="@id/tvThirdLoginTitle"
          android:layout_marginStart="15dp"
          android:layout_marginLeft="15dp"
          app:layout_constraintBottom_toBottomOf="@id/tvThirdLoginTitle"
    />

    <ImageView
            android:id="@+id/ivLoginWeiBo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="50dp"
            android:background="@drawable/icon_weibo_login"
    />

    <ImageView
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivLoginWeiBo"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/icon_wx_login"
    />

    <ImageView
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivLoginWeiBo"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/icon_qq_login"
    />
</merge>