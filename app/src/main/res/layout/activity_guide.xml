<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

    <RadioGroup
        android:id="@+id/rgDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="140dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbDotOne"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/select_guide_dot_bg"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbDotTwo"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/select_guide_dot_bg"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rbDotThree"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/select_guide_dot_bg"
            android:button="@null" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvJumpMain"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="68dp"
        android:background="@drawable/shape_button_select"
        android:gravity="center"
        android:text="点击进入"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/text_btn_size" />
</FrameLayout>