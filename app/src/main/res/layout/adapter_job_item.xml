<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:id="@+id/llParent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivJobListImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_job_img" />

        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ivJobListImg"
            android:text="招聘兼职UI设计师"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_default_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJobTitle"
            android:layout_alignLeft="@id/tvJobTitle"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvJobCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="郑州"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_small_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="|"
                android:textSize="@dimen/text_small_size" />

            <TextView
                android:id="@+id/tvJobArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金水"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_small_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="|"
                android:textSize="@dimen/text_small_size" />

            <TextView
                android:id="@+id/tvJobNumbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招2人"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_small_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvJobSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="10币/时"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_big_size"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>