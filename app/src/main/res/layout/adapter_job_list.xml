<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/shape_white_circle_horn_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivJobListImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/icon_job_img" />

    <TextView
        android:id="@+id/tvJobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/ivJobListImg"
        android:text="招聘兼职UI设计师"
        android:textColor="@color/text_title"
        android:textStyle="bold"
        android:textSize="@dimen/text_default_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvJobTitle"
        android:layout_alignLeft="@id/tvJobTitle"
        android:layout_marginTop="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金水 | 高新区"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/text_big_small_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="录用"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/text_big_small_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="2人"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_big_small_size" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="10币/时"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_btn_size"
        android:textStyle="bold" />
</RelativeLayout>