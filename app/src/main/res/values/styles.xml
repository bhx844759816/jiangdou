<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">56dp</item>
    </style>

    <style name="Base.AppTheme" parent="AppTheme">

    </style>

    <style name="DividerLineTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_line</item>
    </style>

    <style name="popup_animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
    </style>

    <style name="TabLayoutTextSize">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>
</resources>
